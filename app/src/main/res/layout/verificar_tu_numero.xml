<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/Blanco"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contenido"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="0"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Autorizas  a ¿hay chico? a enviar un código de verificación por sms para la validación de tu cuenta "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/negro" />

    <CheckBox
        android:id="@+id/ch_acepto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acepto"
        android:textColor="@color/negro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:padding="12dp"
            android:text="Volver"
            android:textColor="@color/colorAccent" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:padding="12dp"
            android:text="Enviar SMS"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:onClick="tengo_codigo"
        android:text="Tengo un Código"
        android:textColor="@color/negro" />

</LinearLayout>